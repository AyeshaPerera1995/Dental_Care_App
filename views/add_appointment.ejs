		<script>

			function getPatientDetails(id){
			
			// set second tab available 
			$('#btnNext').prop('disabled', false);
			$('#AD').css('pointer-events', 'visible');

			// Search patient
			$.ajax({        
        	url: 'http://nenotechnologies-001-site13.etempurl.com/api/patient/getpatientbyid?id='+id,
        	type: 'GET',
        	headers: {
        	    AccessToken: '<%=current_user.accesstoken%>'
        	}, 
        	success: function(res) {
        	    // console.log(res.data);	
				$('#patient_list').hide('slow');
				$('#patient_info').collapse('show');

				$('#patient_id').val(res.data.id);
				$('#name').val(res.data.name);
				$('#nic').val(res.data.nic);
				$('#dob').val(res.data.dob);
				$('#gender').val(res.data.gender);
				$('#contact').val(res.data.contact_number);
				$('#address').val(res.data.address);

        	}
        	});

			}			
		</script>

		<!--Sweetalert-->
