		<script>

			$(document).ready(function() {
				var success_msg = "<%=success_msg%>";
				var error_msg = "<%=error_msg%>";

				var number = "<%=data_num%>";
				var name = "<%=data_name%>";
				var date = "<%=data_date%>";

				if (error_msg != "") {			
            		swal({
                    type: 'error',
                    title: 'Error',
                    text: error_msg,
					showConfirmButton: false,
                	});

        		}else if(success_msg != ""){
					swal({
						type: 'success',
            			title: 'Saved',
						text: success_msg,
            			showCancelButton: true,
            			confirmButtonText: 'Print Number',
						confirmButtonColor: '#eb5bb1',
            			cancelButtonText: 'Cancel',
            			allowOutsideClick: false
        			}).then((result) => {
            			if (result.dismiss !== 'cancel') {
							window.open("appointments/print_number/"+number+'&'+name+'&'+date, '_blank');
            			} else {
							window.location = "appointments/add_appointment";
            			}
        			})

				}
				
			});
		</script>

