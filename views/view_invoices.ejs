	function searchSelectData(){
		$('[name="search_by"]').on('change', function() {  
  			if($(this).val() === "date_range") {
				$('input[name="start_date"]').prop("readonly", false);
				$('input[name="end_date"]').prop("readonly", false);
				$('input[name="invo_no"]').prop("readonly", true);
  			} 
			else if($(this).val() === "invo_no"){
				$('input[name="start_date"]').prop("readonly", true);
				$('input[name="end_date"]').prop("readonly", true);
				$('input[name="invo_no"]').prop("readonly", false);
  			}
			else if($(this).val() === "credit"){
