  <script>

    $('[name="invo_number"]').on('change', function() {
       $('#selected_invo_balance').val($('[name="invo_number"]').val().split('-')[1]);
       $('[name="total_payable"]').val($('[name="invo_number"]').val().split('-')[1]);
    });

	// set paid amount 
	$('[name="paid"]').on('keyup', function(e) { 
		var total = $('[name="total_payable"]').val();
		var paid = $('[name="paid"]').val();

        var balance = total - paid;
		$('[name="balance"]').val(balance+'.00');
	
	});


	$('[name="have_app_date"]').on('change', function() {  
		if ($('[name="have_app_date"]').is(":checked")) {
			$('[name="app_date"]').prop('disabled', false);
            $('#btnSave').prop('disabled', true);
		}else{
			$("input[type=date]").val("");
			$('#available_status').css('background','white');
			$('#available_text').text('');
			$('#error_text').text('');
			$('[name="app_date"]').prop('disabled', true);
            $('#btnSave').prop('disabled', false);
		}  		
	});

	function checkAvailability(){
		console.log($('[name="app_date"]').val());
		var date = $('[name="app_date"]').val();  // 2021-12-29
		var select_date = date.split('-')[2]+'-'+date.split('-')[1]+'-'+date.split('-')[0];
		if (date != '') {
		    // check availability 
			$.ajax({        
			url: 'http://nenotechnologies-001-site13.etempurl.com/api/appointment/Nextappointmentbydate?date='+select_date,
        	type: 'GET',
        	headers: {
        	    AccessToken: '<%=current_user.accesstoken%>'
        	}, 
        	success: function(res) {
				if (res.data.status =='Full') {
					$('#available_status').css('background-color','red');
					$('#available_status').html("<i style='color:white; margin-left: 5px;' class='flaticon2-delete icon-nm'></i>");				
					$('#available_text').text('Not Available');
					$('#error_text').text('');
					$('[name="have_app_date"]').prop('checked', false);
					$('[name="app_date"]').val("");
					$('[name="app_date"]').prop('disabled', true);
                }else if(res.data.status == 'Available'){
					$('#available_status').css('background-color','green');
					$('#available_status').html("<i style='color:white; margin-left: 5px;' class='flaticon2-check-mark'></i>");
					$('#available_text').text('Available');
					$('#error_text').text('');

                    if ($('[name="have_app_date"]').is(":checked") && res.data.status == 'Available') {
                        $('#btnSave').prop('disabled', false);
                    }else{
                        $('#btnSave').prop('disabled', true);
                    }
					
				}

			}			
			});	
			
		}else{
			console.log('not ok');
			$("#error_text").css("color", "red");
			$('#error_text').text('Please select the date first!');
		}
		
	}

		</script>

